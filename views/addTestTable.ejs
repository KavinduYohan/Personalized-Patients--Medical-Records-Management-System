<!DOCTYPE html>
<html>
<head>

<link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
<link href="../css/dataTables.bootstrap4.min.css" rel="stylesheet">
<link rel="../stylesheet" type="text/css" href="css/design.css">


<script src="../js/jquery.min.js"></script>
<script src="../js/jquery.dataTables.min.js"></script>
<script src="../js/dataTables.bootstrap4.min.js"></script>

</head>

<body>
    <nav class="py-1 navbar navbar-expand-lg navbar-light bg-danger">
        <a class="navbar-brand text-white ml-4" href="/"><b>Added Tests</b></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">

            <div class="mr-5">
                <ul class="navbar-nav mr-auto mr-0">

                    <li class="nav-item">
                        <a class="nav-link text-white" href="/addtest">Add new Test</b></a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>
 

  <% if (empData.length > 0) { %>
    <div class="container mt-5">
      
      <table >
      <thead>
        <tr>
          <div class="col-sm-12">
            <table class="table table-bordered dataTable no-footer" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
          <thead>
             <tr role="row"><th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 800px;">
              Test Name
            </th>
          
          <th>Operations</th>
          
          
        </tr>
      </thead>
      <tbody>
        <% empData.forEach(data => { %>
          <tr role="row" class="even">
            <td class="sorting_1"><%= data.testname %></td> 
            
            <td>
             
                
                <form style="display: inline;" action="/deleteTest/<%= data._id %>?_method=DELETE" method="POST">
                  <button style="cursor: pointer;" type="submit" class="btn btn-danger ml-2">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No data found for this patient.</p>
  <% } %>

          </div>
         
         
  <script src="js/employee.js"></script>
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function updateModalImage(imageUrl) {
      var modalImage = document.getElementById('modalImage');
      modalImage.src = imageUrl;
    }
  </script>

  

</body>
</html>


